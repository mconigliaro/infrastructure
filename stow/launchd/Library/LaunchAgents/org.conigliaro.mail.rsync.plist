<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>org.conigliaro.mail.rsync</string>
    <key>ProgramArguments</key>
    <array>
        <string>rsync</string>
        <string>-avz</string>
        <string>--delete</string>
        <string>mike@mail.conigliaro.org:~/</string>
        <string>/Users/mike/Documents/Backups/mail.conigliaro.org</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>StartInterval</key>
    <integer>3600</integer>
    <key>StandardOutPath</key>
    <string>/tmp/org.conigliaro.mail.rsync.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/org.conigliaro.mail.rsync.log</string>
</dict>
</plist>
