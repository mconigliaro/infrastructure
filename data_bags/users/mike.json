{
  "id": "mike",
  "homedir": "/home/mike",
  "comment": "Mike Conigliaro",
  "shell": "/bin/zsh",
  "oh_my_zsh": {
    "manage_zshrc": true,
    "theme": "gentoo",
    "plugins": [
      "brew", "bundler", "capistrano", "debian", "gem", "git", "git-extras",
      "git-flow", "nanoc", "osx", "rake", "rvm", "thor", "vagrant"
    ],
    "zsh_options": [
      "setopt NO_CORRECT_ALL",
      "export EDITOR=subl"
    ]
  },
  "groups": ["domainadmins", "sudo"],
  "git": {
    "user": {
      "name": "Mike Conigliaro",
      "email": "mike@conigliaro.org"
    },
    "color": {
      "ui": true
    }
  },
  "github": {
    "local_dir": "projects",
    "users": ["mconigliaro"],
    "orgs": ["bloarzeyd"]
  },
  "sublime": {
    "packages": [
      "https://sublime.wbond.net/Package%20Control.sublime-package"
    ],
    "preferences": {
      "ensure_newline_at_eof_on_save": true,
      "find_selected_text": true,
      "rulers": [79],
      "save_on_focus_lost": true,
      "tab_size": 2,
      "translate_tabs_to_spaces": true,
      "trim_trailing_white_space_on_save": true
    }
  }
}
