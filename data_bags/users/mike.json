{
  "id": "mike",
  "homedir": "/home/mike",
  "comment": "Mike Conigliaro",
  "shell": "/bin/zsh",
  "oh_my_zsh": {
    "manage_zshrc": true,
    "theme": "gentoo",
    "plugins": [
      "brew", "bundler", "cap", "debian", "gem", "git", "nanoc",
      "osx", "rake", "ruby", "rvm", "sublime", "vagrant"
    ]
  },
  "groups": ["domainadmins", "sudo"],
  "github": {
    "local_dir": "projects",
    "users": ["mconigliaro"],
    "orgs": ["bloarzeyd"]
  },
  "sublime": {
    "Preferences": {
      "rulers": [79],
      "tab_size": 2,
      "translate_tabs_to_spaces": true,
      "trim_trailing_white_space_on_save": true,
      "find_selected_text": true
    }
  }
}
